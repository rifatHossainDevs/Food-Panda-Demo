<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="16dp"
    app:cardCornerRadius="8dp"
    android:paddingBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_dinnerImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/dinner"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_dinnerImage"
            android:text="@string/food_chemistry"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="4dp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:text="Fast Food"
            android:textSize="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="12dp"/>

        <ImageView
            android:id="@+id/iv_timeClock"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_type"
            android:src="@drawable/baseline_access_time_24"
            android:layout_marginStart="11dp"/>



        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_timeClock"
            app:layout_constraintTop_toTopOf="@id/iv_timeClock"
            app:layout_constraintBottom_toBottomOf="@id/iv_timeClock"
            android:text="20-35 min"
            android:textSize="12dp"
            android:layout_marginHorizontal="4dp"/>

        <ImageView
            android:id="@+id/iv_delivery"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintStart_toEndOf="@+id/tv_time"
            app:layout_constraintTop_toBottomOf="@id/tv_type"
            android:src="@drawable/baseline_delivery_dining_24"
            android:layout_marginStart="11dp"/>

        <TextView
            android:id="@+id/tv_prise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_delivery"
            app:layout_constraintTop_toTopOf="@id/iv_timeClock"
            app:layout_constraintBottom_toBottomOf="@id/iv_timeClock"
            android:text="Tk69"
            android:textSize="12dp"
            android:layout_marginHorizontal="4dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/baseline_circle_24"
            android:layout_margin="1dp"
            android:id="@+id/circleImage"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/love"
            app:layout_constraintStart_toStartOf="@id/circleImage"
            app:layout_constraintTop_toTopOf="@id/circleImage"
            app:layout_constraintBottom_toBottomOf="@id/circleImage"
            app:layout_constraintEnd_toEndOf="@id/circleImage"/>

        <TextView
            android:id="@+id/tv_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_timeClock"
            android:text="Save Up to 10%"
            android:background="@drawable/shap_offer"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>